#include <ESP8266WiFi.h>
#include <WiFiClient.h>
#include <ESP8266WebServer.h>
#include <ESP8266mDNS.h>

const char* ssid = "";
const char* password = "";

ESP8266WebServer server(80);

const int led = 2;
const int cancello = 12; // D6
const int cancelletto = 13; // D7

void handleRoot() {
  digitalWrite(led, 1);
  delay(600);
  digitalWrite(led, 0);
  server.send(200, "text/plain", "online!");
  Serial.println("request received");
}

void handleNotFound(){
  digitalWrite(led, 1);
  String message = "File Not Found\n\n";
  message += "URI: ";
  message += server.uri();
  message += "\nMethod: ";
  message += (server.method() == HTTP_GET)?"GET":"POST";
  message += "\nArguments: ";
  message += server.args();
  message += "\n";
  for (uint8_t i=0; i<server.args(); i++){
    message += " " + server.argName(i) + ": " + server.arg(i) + "\n";
  }
  server.send(404, "text/plain", message);
  digitalWrite(led, 0);
}

void setup(void){
  pinMode(led, OUTPUT);
  pinMode(cancello, OUTPUT);
  pinMode(cancelletto, OUTPUT);
  digitalWrite(led, 0);
  Serial.begin(115200);
  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);
  Serial.println("");

  // Wait for connection
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("");
  Serial.print("Connected to ");
  Serial.println(ssid);
  Serial.print("IP address: ");
  Serial.println(WiFi.localIP());

  if (MDNS.begin("citofono")) {
    Serial.println("MDNS responder started");
  }

  server.on("/", handleRoot);

  server.on("/cancello", [](){
    digitalWrite(cancello, 1);
    delay(600);
    digitalWrite(cancello, 0);
    server.send(200, "text/plain", "apertura cancello");
  });
  server.on("/cancelletto", [](){
    digitalWrite(cancelletto, 1);
    delay(600);
    digitalWrite(cancelletto, 0);
    server.send(200, "text/plain", "apertura cancello piccolo");
  });

  server.onNotFound(handleNotFound);

  server.begin();
  Serial.println("HTTP server started");
}

void loop(void){
  server.handleClient();
}
